{
  "manifest_version": 3,
  "name": "Download Any Canvas",
  "version": "1.2",
  "description": "Download merged images from any canvas elements on any site",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_title": "Download Canvas",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "download-canvas": {
      "suggested_key": {
        "default": "Ctrl+Shift+D"
      },
      "description": "Download canvas from current page"
    }
  }
}